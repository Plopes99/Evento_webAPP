@page "/Activity/{id}"
<h3>Activity</h3>


 
<div class="row">
    <EditForm Model="@act" OnValidSubmit="HandleValidRequest" OnInvalidSubmit="@HandleFailedRequest">
        <div>
            <label for="name">Name:</label>
            <InputText id="name" class="form-control" @bind-Value="@act.Name" />
        </div>
        
        <div>
            <label for="date">Date:</label>
            <InputDate id="date" class="form-control" @bind-Value="@act.Date" />
        </div>

        <div>
            <label for="description">Description:</label>
            <InputTextArea id="description" class="form-control" @bind-Value="@act.Description" />
        </div>
        
        
        <button type="submit" class="btn btn-primary">Save</button>
        
        <a @onclick="GoToEvents" class="btn btn-danger">Back</a>

        <div>
            <p style="color: red">@Message</p>
        </div>
    </EditForm>
    
    
</div>
