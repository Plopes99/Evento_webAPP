@page "/Edit/{id}"
<PageTitle>Edit User</PageTitle>
@if (SessionId.user != null)
{
    <div class="row">
        <EditForm Model="@user" OnValidSubmit="HandleValidRequest" OnInvalidSubmit="@HandleFailedRequest">
            <div class="form-goup">
                <label for="username">Username:</label>
                <InputText class="form-control" @bind-Value="@user.Username"></InputText>
            </div>
            <div class="form-goup">
                <label for="password">Password:</label>
                <InputText type="password" class="form-control" @bind-Value="@user.Password"></InputText>
            </div>
            <div class="form-goup">
                <label for="email">Email:</label>
                <InputText class="form-control" @bind-Value="@user.Email"></InputText>
            </div>
            <div class="form-goup">
                <label for="phone_number">Phone Number:</label>
                <InputText class="form-control" @bind-Value="@user.PhoneNumber"></InputText>
            </div>
            <div class="form-goup">
                <label for="role">Role:</label>
                <InputSelect @bind-Value="@user.Role">
                    <option value="Organizer">Organizer</option>
                    <option value="Participant">Participant</option>
                </InputSelect>
            </div>
            <div class="form-goup">
                <button type="submit" class="btn btn-warning">Create User</button>
                <a @onclick="@GoToHome" class="btn btn-primary">Back</a>
            </div>
            <div>
                <p>@Message</p>
            </div>
        </EditForm>
    </div>
}
else
{
