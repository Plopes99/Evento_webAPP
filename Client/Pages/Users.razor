@page "/User"
<h3>Login</h3>

<div class="form-group">
    <label for="username">Username:</label>
    <input type="text" id="username" @bind="@Username" class="form-control" />
</div>

<div class="form-group">
    <label for="password">Password:</label>
    <input type="password" id="password" @bind="@Password" class="form-control" />
</div>

<button class="btn btn-primary" @onclick="LoginUser">Login</button>

<p>@loginErrorMessage</p>
<p>@Teste</p>

@code {
    private string Username { get; set; }
    private string Password { get; set; }
    private string loginErrorMessage;
    private string Teste;
    private int count;

    private void LoginUser()
    {
        // Check for null or empty inputs
        if (string.IsNullOrEmpty(Username) || string.IsNullOrEmpty(Password))
        {
            loginErrorMessage = "Please enter both username and password.";
            return;
        }
        else
        {
            count = _users.Count();
            Teste = count.ToString();
            Console.WriteLine(Teste);
            return;
        }
        
        
        
       
        }
    }
}
